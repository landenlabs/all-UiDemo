<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/highlight</item>

        <!--
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowContentOverlay">@null</item>
        -->
    </style>

    <!-- use when building for Car/Automotive
    <style name="AppTheme1" parent="@style/Theme.CarUi.WithToolbar">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">#E91E63</item>

        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Full" >
        <!-- Min API 19 -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ScrollTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/lighten</item>
    </style>

    <style name="ScrollTabStyle" parent="Widget.Design.TabLayout">
        <item name="android:textSize">14dp</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/ScrollTabTextAppearance</item>
    </style>

    <style name="SwitchBlueTheme">
        <item name="colorControlActivated">#2096F0</item>
    </style>

    <style name="SwitchBlueStyle">
        <item name="android:textColor">#ff00ff</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:background">@drawable/transparent_ripple</item>
        <!-- min API 15
        <item name="android:thumbTint">#2096F0</item>
        <item name="android:trackTint">#165B90</item>
        -->
    </style>
    <style name="TextAppearanceBlack" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="TextAppearanceBlack12" parent="@style/TextAppearanceBlack">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearanceBlack16" parent="@style/TextAppearanceBlack">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceBlack20" parent="@style/TextAppearanceBlack">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LongText" parent="@style/TextAppearanceBlack20">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:text">@string/long_string</item>

    </style>

    <style name="LongBtn" parent="@style/TextAppearanceBlack16">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/checkmark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right|bottom</item>
        <item name="android:lines">1</item>
        <item name="android:text">Go to more then</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#f00</item>
    </style>

    <style name="TextAppearanceBlack32" parent="@style/TextAppearanceBlack">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearanceWhite" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearanceWhite20" parent="@style/TextAppearanceWhite">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearanceWhite32" parent="@style/TextAppearanceWhite">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextLongA" parent="@style/TextAppearanceWhite">
        <item name="android:textSize">20sp</item>
    </style>



    <!--
    parent="@android:style/Widget.Material.Light.CompoundButton.RadioButton"
 <item name="android:background">#666</item>
 <item name="android:background">@drawable/ripple_boarderless</item>
    -->
    <style name="RadioTab" parent="@android:style/Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ripple_boarderless</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_colors</item>
    </style>


    <style name="FullDrawerStyle" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Min API 19 -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <!-- item name="android:thumb">@android:drawable/ic_menu_compass</item -->
        <item name="android:thumbOffset">4dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SeekBarVert" >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <!--
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        -->
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:mirrorForRtl">true</item>
    </style>

    <!-- custom vertical scroll bar -->

    <style name="scrollbar_shape_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_vertical_track</item>
        <item name="android:scrollbarSize">12dp</item>
        <item name="android:scrollbarFadeDuration">2000</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
    </style>


    <style name="cardFlow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout">@layout/card_flow</item>
    </style>

    <style name="cardFlow0">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout">@layout/card_flow</item>
    </style>

    <style name="cardStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:clipToOutline">true</item>
        <!--
         <item name="android:padding">@dimen/card_padding</item>
         <item name="android:background">@drawable/bg_panel_3d</item>
         -->
    </style>

    <style name="font_default">
        <item name="android:textColor">#fff</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="text12" parent="font_default">
        <item name="android:textSize">12dp</item>
    </style>
    <style name="text14" parent="font_default">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="text20" parent="font_default">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="text24" parent="font_default">
        <item name="android:textSize">24dp</item>
    </style>
    <style name="text32" parent="font_default">
        <item name="android:textSize">32dp</item>
    </style>


    <style name="info_label" parent="text20">
        <item name="android:textColor">#111</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="info_value" parent="text20">
        <item name="android:textColor">#f00</item>
    </style>


    <style name="dash1_flow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="flow_verticalBias">0</item>
        <item name="flow_horizontalAlign">start</item>
        <item name="flow_horizontalStyle">spread_inside</item>
        <item name="flow_verticalGap">16dp</item>
        <item name="flow_horizontalGap">16dp</item>
        <item name="flow_wrapMode">chain</item>
    </style>

    <!--
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    -->
    <style name="flowField1">
        <item name="android:background">@drawable/bg_dash1_edittext_round</item>
        <item name="layout_constraintWidth_min">100dp</item>
        <item name="layout_constraintWidth_max">300dp</item>
        <item name="layout_constraintWidth_default">wrap</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
