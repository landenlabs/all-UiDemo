<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
         android:stretchColumns="*"
    -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/round_border3"
        android:divider="@drawable/hline"
        android:padding="10dp"
        android:showDividers="middle|end"
        >

        <TableRow
            android:baselineAligned="false"
            android:divider="@drawable/vline"
            android:showDividers="middle">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:ellipsize="none"
                android:text="longertext0" />

            <ImageView
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:background="@drawable/anim_grady2"
                android:src="@drawable/scr_hourly" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="#00f"
                android:src="@drawable/scr_hourly" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/anim_grady2"
                android:src="@drawable/scr_hourly" />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:text="text2"
                android:singleLine="true"
                android:ellipsize="none"
                android:textSize="30sp"
             />
            <!--

            <TextView android:text="text3"
                />
                -->
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:divider="@drawable/vline"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:showDividers="middle">

            <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="longtext1" />

            <ImageView
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:background="@drawable/anim_grady2"
                android:src="@drawable/scr_hourly" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="text3" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="30sp"
                android:text="text4444" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="text5" />
        </LinearLayout>

    </TableLayout>

</ScrollView>