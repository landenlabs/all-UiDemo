<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d0d0ff"
        android:gravity="center"
        android:padding="10dp"
        android:text="- ProgressBar Vertical -"
        android:textColor="@android:color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fdd"
                android:clipChildren="false"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="Primary Percent"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/seekBarH1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="20dp"
                    android:background="#cff"
                    android:max="100"
                    android:padding="0dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/seekbar_second_h1" />

                <TextView
                    android:id="@+id/seekBarH1_Lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fdd"
                    android:foreground="@drawable/round_border_transparent2"
                    android:elevation="10dp"
                    android:text="34"
                    android:textSize="26dp"
                    tools:translationX="100dp"
                    tools:translationY="-30dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddf"
                android:clipChildren="false"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="Secondary Percent"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/seekBarH2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="20dp"
                    android:background="#cff"
                    android:max="100"
                    android:maxHeight="20dp"
                    android:padding="0dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/seekbar_second_h1" />

                <TextView
                    android:id="@+id/seekBarH2_Lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ddf"
                    android:elevation="10dp"
                    android:foreground="@drawable/round_border_transparent2"
                    android:textAllCaps="true"
                    android:textSize="26dp"
                    tools:text="34"
                    tools:translationX="100dp"
                    tools:translationY="-25dp" />
            </FrameLayout>

            <TableLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="300dp" >

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" >

                <TextView
                    android:id="@+id/seekBarV2_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SB1"
                    />
                </TableRow>

                <TableRow
                    android:layout_height="250dp"
                    android:layout_width="match_parent" >

                <!-- Have to force padding to zero, default is ~10dp -->
                <SeekBar
                    android:layout_below="@+id/seekBarV2_lbl"
                    android:id="@+id/seekBarV2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:maxWidth="100dp"
                    android:maxHeight="300dp"
                    android:padding="0dp"
                    android:progress="30"
                    android:progressDrawable="@drawable/seekbar_second_v1"
                    android:secondaryProgress="80" />

                <Space
                    android:id="@+id/gap1"
                    android:layout_toRightOf="@+id/seekBarV2"
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <ProgressBar
                    android:layout_toRightOf="@+id/gap1"
                    android:id="@+id/progressBarV1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:progress="30"
                    android:progressDrawable="@drawable/seekbar_second_v1"
                    android:secondaryProgress="80"
                    tools:background="#888" />

                <Space
                    android:layout_toRightOf="@+id/progressBarV1"
                    android:id="@+id/gap2"
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <ProgressBar
                    android:layout_toRightOf="@+id/gap2"
                    android:id="@+id/progressBarV2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:progress="30"
                    android:progressDrawable="@drawable/seekbar_second_v2"
                    android:secondaryProgress="80"
                    tools:background="#888" />

                <Space
                    android:layout_toRightOf="@+id/progressBarV2"
                    android:id="@+id/gap3"
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <ProgressBar
                    android:layout_toRightOf="@+id/gap3"
                    android:id="@+id/progressBarV3"
                    android:layout_width="30dp"

                    android:layout_height="match_parent"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:progress="30"
                    android:progressDrawable="@drawable/seekbar_second_v3"
                    android:secondaryProgress="80"
                    tools:background="#888" />
                </TableRow>
            </TableLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>