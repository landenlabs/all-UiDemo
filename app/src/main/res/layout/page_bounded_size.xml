<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_title_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcc"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddf"
        android:gravity="center"
        android:text="- Bounded Container -"
        android:textAppearance="@style/TextAppearanceBlack20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/long_string"
        android:textAppearance="@style/TextAppearanceBlack20" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ccc"
                android:gravity="center"
                android:text="Bound max width 200, 250 300 dp"
                android:textAppearance="@style/TextAppearanceBlack20" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.landenlabs.all_UiDemo.Util.BoundedLinearLayout
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#58f"
                    android:orientation="horizontal"
                    app:bounded_width="200dp">

                    <TextView
                        style="@style/LongText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </com.landenlabs.all_UiDemo.Util.BoundedLinearLayout>

                <Button
                    style="@style/LongBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/title1" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.landenlabs.all_UiDemo.Util.BoundedLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#85f"
                    android:orientation="horizontal"
                    app:bounded_width="250dp">

                    <TextView
                        style="@style/LongText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </com.landenlabs.all_UiDemo.Util.BoundedLinearLayout>

                <Button
                    style="@style/LongBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.landenlabs.all_UiDemo.Util.BoundedLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:bounded_width="300dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/LongText" />

                </com.landenlabs.all_UiDemo.Util.BoundedLinearLayout>

                <Button
                    style="@style/LongBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ccc"
                android:gravity="center"
                android:text="Bound max percent 30,40,50,80%"
                android:textAppearance="@style/TextAppearanceBlack20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.landenlabs.all_UiDemo.Util.BoundedLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#85f"
                    android:orientation="horizontal"
                    app:bounded_widthPercent="0.3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/LongText" />

                </com.landenlabs.all_UiDemo.Util.BoundedLinearLayout>

                <Button
                    style="@style/LongBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.landenlabs.all_UiDemo.Util.BoundedLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#58f"
                    android:orientation="horizontal"
                    app:bounded_widthPercent="0.4">

                    <TextView
                        style="@style/LongText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </com.landenlabs.all_UiDemo.Util.BoundedLinearLayout>

                <Button
                    style="@style/LongBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#f00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.landenlabs.all_UiDemo.Util.BoundedLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#85f"
                    android:orientation="horizontal"
                    app:bounded_widthPercent="0.5">

                    <TextView
                        style="@style/LongText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </com.landenlabs.all_UiDemo.Util.BoundedLinearLayout>

                <Button
                    style="@style/LongBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.landenlabs.all_UiDemo.Util.BoundedLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#f5f"
                    android:orientation="horizontal"
                    app:bounded_widthPercent="0.8">

                    <TextView
                        style="@style/LongText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </com.landenlabs.all_UiDemo.Util.BoundedLinearLayout>

                <Button
                    style="@style/LongBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ccc"
                android:gravity="center"
                android:text="Shrink parent 70%\nMax Width Percent 40,50,80%"
                android:textAppearance="@style/TextAppearanceBlack20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textAppearance="@style/TextAppearanceBlack20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.landenlabs.all_UiDemo.Util.BoundedLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#58f"
                            android:orientation="horizontal"
                            app:bounded_widthPercent="0.4">

                            <TextView
                                style="@style/LongText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </com.landenlabs.all_UiDemo.Util.BoundedLinearLayout>

                        <Button
                            style="@style/LongBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.landenlabs.all_UiDemo.Util.BoundedLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#85f"
                            android:orientation="horizontal"
                            app:bounded_widthPercent="0.5">

                            <TextView
                                style="@style/LongText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </com.landenlabs.all_UiDemo.Util.BoundedLinearLayout>

                        <Button
                            style="@style/LongBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.landenlabs.all_UiDemo.Util.BoundedLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#f5f"
                            android:orientation="horizontal"
                            app:bounded_widthPercent="0.8">

                            <TextView
                                style="@style/LongText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </com.landenlabs.all_UiDemo.Util.BoundedLinearLayout>

                        <Button
                            style="@style/LongBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="30%"
                    android:textAppearance="@style/TextAppearanceBlack20" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>