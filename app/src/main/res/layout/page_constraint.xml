<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/map_view_holder"
        android:layout_width="match_parent"
        android:background="#0ff"
        android:layout_height="150dp" />


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_map_controls_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="#ff0">

        <TextView
            android:id="@+id/label_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TopLine"
            android:textColor="#f00"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#0f0"
            android:text="222222222222"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/label_3"
            app:layout_constraintTop_toBottomOf="@id/label_1" />

        <TextView
            android:id="@+id/label_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="333333333333"
            app:layout_constraintBottom_toBottomOf="parent"
             />


    </android.support.constraint.ConstraintLayout>
</FrameLayout>


