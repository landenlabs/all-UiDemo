<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#d0d0ff"
        android:padding="10dp"
        android:text="- Scrolling TextViews -" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom"
        android:layout_below="@id/title"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:clickable="true"
                android:id="@+id/TextView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/image_e"
                android:padding="10dp"
                android:text="TextView img bg" />

            <TextView
                android:clickable="true"
                android:id="@+id/TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:foreground="@drawable/image_e"
                android:padding="10dp"
                android:text="TextView img fg" />

            <TextView
                android:clickable="true"
                android:id="@+id/TextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:drawableTop="@drawable/image_e"
                android:text="TextView img Top" />

            <TextView
                android:clickable="true"
                android:id="@+id/TextView3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:maxLines="3"
                android:lines="3"
                android:singleLine="false"
                android:gravity="center"
                android:background="@drawable/round_border_sel"
                android:drawableTop="@drawable/scr_home"
                android:text="TextView img + sel" />

            <Button
                android:clickable="true"
                android:id="@+id/ButtonView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableTop="@drawable/image_e"
                android:gravity="center"
                android:padding="10dp"
                android:text="Button Top" />

            <Button
                android:clickable="true"
                android:id="@+id/ButtonView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/round_border_sel"
                android:drawableTop="@drawable/image_e"
                android:gravity="center"
                android:padding="10dp"
                android:text="Button Top + Sel" />


            <CheckBox
                android:id="@+id/Checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/round_border_sel"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:drawableTop="@drawable/image_e"
                android:padding="5dp"
                android:text="checkbox wrap Top" />


            <CheckBox
                android:id="@+id/Checkbox100p0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/round_border_sel"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:drawableTop="@drawable/image_e"
                android:gravity="center"
                android:padding="0dp"
                android:text="cb w=100 p=0dp" />

            <CheckBox
                android:id="@+id/Checkbox100p5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/round_border_sel"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:gravity="center"
                android:drawableTop="@drawable/scr_home"
                android:padding="5dp"
                android:text="cb w=100 p=5dp" />

            <CheckBox
                android:id="@+id/Checkbox200p5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/round_border_sel"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:gravity="center"
                android:drawableTop="@drawable/scr_home"
                android:padding="5dp"
                android:text="cb w=w00 p=5dp" />

            <CheckBox
                android:id="@+id/Checkbox100p10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/round_border_sel"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:gravity="center"
                android:drawableTop="@drawable/scr_home"
                android:padding="10dp"
                android:text="cb w=100 p=10dp" />

            <CheckBox
                android:clickable="true"
                android:id="@+id/Checkbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:checked="true"
                android:background="@drawable/round_border_sel"
                android:button="@drawable/image_e"
                android:padding="35dp"
                android:text="checkbox btn" />


            <TextView
                android:clickable="true"
                android:id="@+id/TextView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableBottom="@drawable/image_e"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView Bottom" />

            <Button
                android:clickable="true"
                android:id="@+id/TextView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/image_e"
                android:drawableRight="@drawable/image_e"
                android:padding="10dp"
                android:text="Left Button Right" />

            <TextView
                android:clickable="true"
                android:id="@+id/TextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#c0c0ff"
                android:drawableRight="@drawable/image_e"
                android:padding="10dp"
                android:text="TextView right" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>