<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/paper_pink">

        <TextView
            android:id="@+id/drawfg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:text="-- Tint Drawables --"
            android:textColor="@android:color/white"
            android:textSize="20sp" />



        <ImageView
            android:id="@+id/drawables_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/drawfg_title"
            android:src="@drawable/shadow7"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/drawables_0"
            android:layout_toRightOf="@+id/drawables_0"
            android:text=" -- Original Image"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/drawables_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/drawables_0"
            android:src="@drawable/shadow7"
            android:tint="#0F0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/drawables_1"
            android:layout_toRightOf="@+id/drawables_1"
            android:text=" -- Tint set in XML"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/drawables_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/drawables_1"
            android:src="@drawable/shadow7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/drawables_2"
            android:layout_toRightOf="@+id/drawables_2"
            android:text=" -- Tint set in code on drawable"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/drawables_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/drawables_2"
            android:src="@drawable/shadow7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/drawables_3"
            android:layout_toRightOf="@+id/drawables_3"
            android:text=" -- Tint set in code on ImageView"
            android:textSize="20sp" />
    </RelativeLayout>
</ScrollView>