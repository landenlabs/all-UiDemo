                    android:id="@+id/long_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="@string/long_string"
                    android:textAppearance="@style/TextLongA" />

                <TextView
                    android:id="@+id/long_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="@string/long_string"
                    android:textAppearance="@style/TextLongA" />

                <TextView
                    android:id="@+id/long_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:text="@string/long_string"
                    android:textAppearance="@style/TextLongA" />

                <!-- Have to use singleLine,
                     lines=1, maxLines=1 does not work -->
                <TextView
                    android:id="@+id/long_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:singleLine="true"
                    android:text="@string/long_string"
                    android:textAppearance="@style/TextLongA" />

                <!-- Have to use singleLine,
                     lines=1, maxLines=1 does not work -->
                <TextView
                    android:id="@+id/long_text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="@string/long_string"
                    android:textAppearance="@style/TextLongA" />

                <TextView
                    android:id="@+id/long_text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:singleLine="true"
                    android:scrollHorizontally="true"

                    android:text="@string/long_string"
                    android:textAppearance="@style/TextLongA" />

                <!-- Tap on text to start marquee -->
                <TextView
                    android:clickable="true"
                    android:focusableInTouchMode="true"

                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:scrollHorizontally="true"

                    android:id="@+id/long_text7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/long_string"
                    android:textAppearance="@style/TextLongA"
                    android:focusable="true" />

                <!-- Scrollable horizontal text trick to avoid using HorizontalScroll parent -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:clickable="true"
                    android:focusable="true"
                    android:cursorVisible="false"
                    android:singleLine="true"
                    android:inputType="none"

                    android:text="@string/long_string"
                    android:textColor="#fff"
                    android:textAppearance="@style/TextLongA"
                    tools:ignore="LabelFor" />

